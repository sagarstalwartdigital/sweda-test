$pubMediaDir = $storeManager->getStore()->getBaseUrl(\Magento\Framework\UrlInterface::URL_TYPE_MEDIA);

$currentCategory = $om->create('Magento\Catalog\Model\Category')->load($block->getSelectedCategoryId());
