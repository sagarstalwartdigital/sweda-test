                <field id="channelid" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Channel Id</label>
                </field>
            </group>
        </section>
        <section id="pricetable" translate="label" sortOrder="130" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Price Table Setting</label>
            <tab>swedasetting</tab>
            <resource>Stalwart_Sweda::swedasetting_config</resource>
            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
