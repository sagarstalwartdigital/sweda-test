                    <label>Price Title</label>
                </field>
                <field id="viewallproduct" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>View All Product Title</label>
                </field>
            </group>
        </section>
        <section id="instagramsetting" translate="label" sortOrder="130" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Instagram Setting</label>
            <tab>swedasetting</tab>
            <resource>Stalwart_Sweda::swedasetting_config</resource>
            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>Instagram Configuration</label>
                <field id="userid" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>User Id</label>
                </field>
                <field id="accesstoken" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Access Token</label>
                </field>
            </group>
        </section>
