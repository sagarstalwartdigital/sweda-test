<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Mageplaza_Core::css/grid-mageplaza.css"/>
        <css src="Mageplaza_Core::css/font-awesome.min.css"/>
    </head>
    <body>
        <referenceBlock name="page.main.title" remove="true"/>
        <referenceContainer name="sidebar.additional">
                    <block class="Mageplaza\PromoStandards\Block\Topic\Widget" name="mppromostandards.sidebar.topic" template="topic/widget.phtml"/>
                    <!-- <block class="Mageplaza\PromoStandards\Block\Category\Widget" name="mppromostandards.sidebar.category" template="category/widget.phtml"/> -->
        </referenceContainer>

        <referenceContainer name="content">
            <block class="Mageplaza\PromoStandards\Block\Design" name="mppromostandards.design" template="Mageplaza_PromoStandards::design.phtml"/>
        </referenceContainer>
    </body>
</page>
