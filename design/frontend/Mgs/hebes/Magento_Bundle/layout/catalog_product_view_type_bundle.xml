<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="customize.button" remove="true" />
        <referenceBlock name="product.info.addto.bundle" remove="true" />
        <referenceContainer name="product.info.bundle.options.top" remove="true" />
        <move element="product.info" destination="product.info.main" before="product.info.list.additional" />
        <move element="product.price.render.bundle.customization" destination="bundle.summary" before="product.info.addtocart.bundle" />
        <move element="product.info.social" destination="bundle.summary" after="product.info.addtocart.bundle" />
        <move element="product.detail.sharethis" destination="bundle.summary" after="product.info.addtocart.bundle" />
        <referenceBlock name="product.info.addtocart.bundle">
			<block class="Magento\Catalog\Block\Product\View" name="product.info.addto.additional" template="product/view/addto.phtml">
				<block class="Magento\Catalog\Block\Product\View" name="product.info.mailto.additional" template="product/view/mailto.phtml"/>
			</block>
		</referenceBlock>
    </body>
</page>
